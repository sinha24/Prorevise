<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <TextView
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Prorevise is first app which provides you to create your own database of words by allowing you to add your desired words best required for your GRE or CAT preparation. It also allows you to manipulate your word database by deleting them. Prorevise is designed to generate random test to check your progress. So get ready to become verbose and pratice hard.\nBest of Luck for your upcoming examination."
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        style="@style/textView"
        android:layout_marginTop="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Developers\nRavi Joshi\nShubham Sinha"/>
    <TextView
        style="@style/textView"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="version 2.0.0\n@ Solipsism Solutions"
        />

    </LinearLayout>